{
  "name": "content-scripts-register-polyfill",
  "version": "1.0.0",
  "description": "Chrome extension polyfill for Firefox's browser.contentScripts.register()",
  "license": "MIT",
  "repository": "bfred-it/content-scripts-register-polyfill",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "contentScripts",
    "content scripts",
    "declarativecontent",
    "declarative",
    "scripts",
    "css",
    "browser",
    "extension",
    "webext",
    "web-ext"
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "xo && tsc --noEmit",
    "prepublishOnly": "tsc",
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "xo": {
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser"
    ],
    "globals": [
      "chrome"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript"
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/chrome": "0.0.86",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "typescript": "^3.5.0",
    "xo": "*"
  },
  "dependencies": {
    "@types/firefox-webext-browser": "^67.0.2"
  }
}
